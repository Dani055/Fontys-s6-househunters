{
  "extends": "../shared/tsconfig.json",
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "types": [
      "jest",
      "node"
    ],
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "index.ts",
    "express-request.d.ts",
    "environment.d.ts",
    "__tests__/**/*",
    "jest.config.ts",
    "jest/*",
  ],
  "exclude": [
    "node_modules"
  ]
}